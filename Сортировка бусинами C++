#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;
void beadSort(vector<int>& arr) {
    int n = arr.size();
    if (n == 0) return;
    int max_val = *max_element(arr.begin(), arr.end());
    vector<int> beads(max_val * n, 0);
    // Устанавливаем бусины
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < arr[i]; j++) {
            beads[i * max_val + j] = 1;
        }
    }
    // Гравитация - бусины "падают" вниз
    for (int j = 0; j < max_val; j++) {
        int sum = 0;
        for (int i = 0; i < n; i++) {
            sum += beads[i * max_val + j];
            beads[i * max_val + j] = 0;
        }
        for (int i = n - sum; i < n; i++) {
            beads[i * max_val + j] = 1;
        }
    }
    // Собираем результат
    for (int i = 0; i < n; i++) {
        int count = 0;
        for (int j = 0; j < max_val && beads[i * max_val + j]; j++) {
            count++;
        }
        arr[i] = count;
    }
}
