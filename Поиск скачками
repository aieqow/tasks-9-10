import math
def jump_search(arr, target):
    """
    Поиск скачками (Jump Search)
    Работает только с отсортированным массивом.
    """
    n = len(arr)
    # Определяем размер прыжка — обычно sqrt(n)
    step = int(math.sqrt(n))
    # Текущий блок
    prev = 0
    # Ищем блок, в котором может находиться элемент
    while prev < n and arr[min(step, n) - 1] < target:
        prev = step
        step += int(math.sqrt(n))
        # Если вышли за границы — элемента нет
        if prev >= n:
            return -1
    # Линейный поиск внутри найденного блока
    for i in range(prev, min(step, n)):
        if arr[i] == target:
            return i
    return -1
# Пример использования
numbers = [1, 3, 5, 7, 9, 12, 15, 20, 25]
target = 12
print("Ищем:", target)
index = jump_search(numbers, target)
if index != -1:
    print("Найден! Индекс =", index)
else:
    print("Элемент не найден.")
