def bucket_sort(arr):
    # Если список пуст или содержит 1 элемент — он уже отсортирован
    if len(arr) <= 1:
        return arr
    # 1. Находим минимальное и максимальное значение
    min_val = min(arr)
    max_val = max(arr)
    # 2. Определяем количество "ведер" (bucket)
    # Можно выбрать любое, но часто берут длину массива
    bucket_count = len(arr)
    # Создаем пустые buckets
    buckets = [[] for _ in range(bucket_count)]
    # 3. Распределяем элементы массива по ведрам
    for num in arr:
        # Нормируем число в диапазон [0, bucket_count-1]
        index = int((num - min_val) / (max_val - min_val + 1) * bucket_count)
        buckets[index].append(num)
    # 4. Сортируем каждое ведро и собираем результат
    sorted_array = []
    for bucket in buckets:
        sorted_array.extend(sorted(bucket))  # Используем встроенную сортировку
    return sorted_array
# Пример использования
nums = [0.42, 0.32, 0.23, 0.52, 0.25, 0.47, 0.51]
print("Исходный список:", nums)
print("Отсортированный:", bucket_sort(nums))
